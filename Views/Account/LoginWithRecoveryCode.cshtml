@model LoginWithRecoveryCodeViewModel
@{
    ViewData["Title"] = Phonebook.Resources.Resources.Account_LoginWithRecoveryCode_Title;
}

<h2>@ViewData["Title"]</h2>
<hr />
<p>
    @Phonebook.Resources.Resources.Account_LoginWithRecoveryCode_Msg
</p>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RecoveryCode">@Phonebook.Resources.Resources.Account_LoginWithRecoveryCode_Label</label>
                <input asp-for="RecoveryCode" class="form-control" autocomplete="off" />
                <span asp-validation-for="RecoveryCode" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">@Phonebook.Resources.Resources.Layout_LogIn</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}